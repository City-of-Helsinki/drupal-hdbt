{
  "name": "hdbt",
  "version": "1.1.0",
  "description": "Webpack configuration for hdbt Drupal 9 theme",
  "author": "Druid",
  "license": "MIT",
  "repository": "github:City-of-Helsinki/drupal-hdbt",
  "scripts": {
    "dev": "webpack --progress --mode=development --config  webpack.config.dev.js --watch",
    "build": "webpack --progress --mode=production --config webpack.config.build.js",
    "postinstall": "husky install & cp -r node_modules/helsinki-design-system/packages/core/src/svg/ src/icons/hds",
    "lint": "lint-staged",
    "lint:js": "eslint --fix src/"
  },
  "dependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/preset-env": "^7.14.4",
    "@nuxt/friendly-errors-webpack-plugin": "^2.5.1",
    "@sideway/address": "^4.1.2",
    "@sideway/formula": "^3.0.0",
    "@sideway/pinpoint": "^2.0.0",
    "@splidejs/splide": "^2.4.21",
    "autoprefixer": "^10.2.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "breakpoint-sass": "^2.7.1",
    "chokidar": "^3.5.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^6.4.1",
    "css-declaration-sorter": "^6.0.3",
    "css-loader": "^5.2.6",
    "es6-promise": "^4.1.1",
    "eslint": "^7.32.0",
    "eslint-config-drupal-bundle": "^1.0.2",
    "eslint-import-resolver-webpack": "0.13.1",
    "eslint-plugin-import": "^2.23.4",
    "expose-loader": "^3.0.0",
    "fsevents": "^2.3.2",
    "glob": "^7.1.7",
    "handorgel": "^0.5.0",
    "hds-core": "^1.2.0",
    "hds-design-tokens": "^1.2.0",
    "helsinki-design-system": "https://github.com/City-of-Helsinki/helsinki-design-system/archive/refs/tags/v1.2.0.tar.gz",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^5.0.9",
    "joi": "^17.4.0",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^1.6.2",
    "mmenu-js": "^8.5.23",
    "node-sass": "^6.0.1",
    "node-sass-glob-importer": "^5.3.2",
    "normalize-url": "^6.1.0",
    "normalize.css": "^8.0.1",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-easy-import": "^3.0.0",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^13.0.0",
    "postcss-import-ext-glob": "^2.0.1",
    "postcss-loader": "^4.3.0",
    "postcss-nested": "^5.0.3",
    "postcss-nesting": "^8.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-scss": "^3.0.2",
    "postcss-strip-inline-comments": "^0.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "^2.3.2",
    "sass-loader": "^11.0.1",
    "svg-inline-loader": "^0.8.0",
    "svg-spritemap-webpack-plugin": "^4.3.3",
    "terser-webpack-plugin": "^5.1.4",
    "tiny-slider": "^2.9.3",
    "webpack": "^5.56.1",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^4.1.4",
    "webpack-notifier": "^1.14.0",
    "webpack-remove-empty-scripts": "^0.7.1"
  },
  "lint-staged": {
    "src/scss/**/*.scss": [
      "postcss *.scss --parser postcss-scss --syntax postcss-scss --use css-declaration-sorter --replace --no-map"
    ],
    "src/js/**/*.js": [
      "eslint --fix"
    ]
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "ie > 10",
    "iOS > 9"
  ]
}
