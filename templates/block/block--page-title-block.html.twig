{#
/**
 * @file
 * Theme override to display a Page title block.
 */
#}

{%
  set classes = [
    'page-title',
  ]
%}

{% if hide_block != true %}
  <div{{ attributes.addClass(classes) }}>
    {% embed "@hdbt/misc/container.twig" with {container_element: 'page-title'} %}
      {% block container_content %}
        {{ title_prefix }}
        {% if label %}
          <h2{{ title_attributes }}>{{ label }}</h2>
        {% endif %}
        {{ title_suffix }}
        {{ content }}
      {% endblock %}
    {% endembed %}
  </div>
{% endif %}
