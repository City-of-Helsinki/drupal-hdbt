{# Link tags #}
{% if link == true %}
  {% embed '@hdbt/misc/tag-list.twig' with { type: 'link' }%}
    {% block content %}
      {% if topics is not empty %}
        {% for term in topics %}
          {% include '@hdbt/misc/tag.twig' with {
            tag: term.name,
            url: term.url,
          }%}
        {% endfor %}
      {% endif %}
      {% if neighbourhoods is not empty %}
         {% for term in neighbourhoods %}
          {% include '@hdbt/misc/tag.twig' with {
            tag: term.name,
            url: term.url,
          }%}
        {% endfor %}
      {% endif %}
      {% if groups is not empty %}
        {% for term in groups %}
          {% include '@hdbt/misc/tag.twig' with {
            tag: term.name,
            url: term.url,
          }%}
        {% endfor %}
      {% endif %}
    {% endblock content %}
  {% endembed %}
{# Static tags #}
{% elseif tags|render or neighbourhoods|render or groups|render %}
  {% embed '@hdbt/misc/tag-list.twig' with { type: 'static' }%}
    {% block content %}
      {% if tags|render %}
        {% for key in tags['#items']|keys %}
          {% include '@hdbt/misc/tag.twig' with {
            tag: tags[key],
            addSpan: true,
          }%}
        {% endfor %}
      {% endif %}
      {% if neighbourhoods|render %}
        {% for key in neighbourhoods['#items']|keys %}
          {% include '@hdbt/misc/tag.twig' with {
            tag: neighbourhoods[key],
            addSpan: true,
          }%}
        {% endfor %}
      {% endif %}
      {% if groups|render %}
        {% for key in groups['#items']|keys %}
          {% include '@hdbt/misc/tag.twig' with {
            tag: groups[key],
            addSpan: true,
          }%}
        {% endfor %}
      {% endif %}
    {% endblock content %}
  {% endembed %}
{% endif %}
