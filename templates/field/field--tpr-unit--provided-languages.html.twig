{%
  set languages = {
    'fi': 'Finnish',
    'sv': 'Swedish',
    'en': 'English'
  }
%}

{%- for item in items -%}
  {% set provided_language = languages[item.content['#context']['value']]|t %}

  {%- if language.id != 'en' -%}
    {{- provided_language|lower -}}
  {%- else -%}
    {{- provided_language -}}
  {%- endif -%}

  {% if not loop.last %}, {% endif %}
{%- endfor -%}
