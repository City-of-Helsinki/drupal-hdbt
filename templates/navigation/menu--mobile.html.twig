{#
/**
 * @file
 * Theme override to display a menu.
 *
 * Available variables:
 * - menu_name: The machine name of the menu.
 * - items: A nested list of menu items. Each menu item contains:
 *   - attributes: HTML attributes for the menu item.
 *   - below: The menu item child items.
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *   - localized_options: Menu link localized options.
 *   - is_expanded: TRUE if the link has visible children within the current
 *     menu tree.
 *   - is_collapsed: TRUE if the link has children within the current menu tree
 *     that are not currently visible.
 *   - in_active_trail: TRUE if the link is in the active trail.
 */
#}
{% import _self as menus %}

{#
  We call a macro which calls itself to render the full tree.
  @see https://twig.symfony.com/doc/1.x/tags/macro.html
#}
{{ menus.menu_links(items, attributes, 0) }}

{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}

  {% set menu_classes = [
    'menu',
    'menu--mobile',
  ] %}

  {% if items %}
    <ul{{ attributes.addClass(menu_classes) }}>
    {% for item in items %}
      {% set level = menu_level + 1 %}
      {% set item_classes = [
        'menu__item',
        item.is_nolink ? 'menu__item--nolink',
        item.is_external ? 'menu__item--external',
        item.is_expanded or item.in_active_trail ? 'menu__item--children',
        item.in_active_trail ? 'menu__item--active-trail',
        'menu__item--level-' ~ level,
      ]%}

      <li{{ item.attributes.addClass(item_classes) }}>
        {% if not item.is_nolink %}
          {% spaceless %}

            {% set link_attributes = {
              'class':
                [
                  'menu__link',
                  item.in_active_trail ? 'menu__link--active-trail',
                  item.is_external ? 'menu__link--external',
                ],
              'aria-current': item.is_currentPage ? 'page': null,
            } %}

            {% set icon_name = (item.url.getOption('attributes')).icon %}

            {% set item_title %}
              {% if icon_name %}
                {% include '@hdbt/misc/icon.twig' with {icon: icon_name, class: 'menu__link__icon'} %}
              {% endif %}
              {{ item.title }}
            {% endset %}

            {{ link(item_title, item.url, link_attributes) }}

          {% endspaceless %}
        {% else %}
          <span{{ create_attribute({'class': item_classes} ) }}>{{ item.title }}</span>
        {% endif %}
        {% if item.below %}
          {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
        {% endif %}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
