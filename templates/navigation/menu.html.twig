{#
/**
 * @file
 * Theme override to display a menu.
 *
 * Available variables:
 * - menu_name: The machine name of the menu.
 * - items: A nested list of menu items. Each menu item contains:
 *   - attributes: HTML attributes for the menu item.
 *   - below: The menu item child items.
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *   - localized_options: Menu link localized options.
 *   - is_expanded: TRUE if the link has visible children within the current
 *     menu tree.
 *   - is_collapsed: TRUE if the link has children within the current menu tree
 *     that are not currently visible.
 *   - in_active_trail: TRUE if the link is in the active trail.
 */
#}

{% import _self as menus %}

{#
  We call a macro which calls itself to render the full tree.
  @see https://twig.symfony.com/doc/1.x/tags/macro.html
#}
{{ menus.menu_links(items, attributes, 0, allow_collabsible, auto_open) }}

{% macro menu_links(items, attributes, menu_level, allow_collabsible, auto_open) %}
  {% import _self as menus %}

  {%
    set menu_classes = [
      'menu',
      'menu--level-' ~ menu_level
    ]
  %}

  {# Allow overriding these variables when embedding from other nav types #}
  {% set allow_collabsible = allow_collabsible|default(false) %}
  {% set auto_open = auto_open|default(false) %}

  {% if items %}
    <ul{{ attributes.addClass(menu_classes) }}>
    {% for item in items %}

      {% set link_id = 'aria-id-' ~ random() %}
      {% set item_is_collabsible = (allow_collabsible and (item.is_collapsed or item.is_expanded)) ? true : false %}

      {% set item_classes = [
        'menu__item',
        item.is_nolink ? 'menu__item--nolink',
        item.is_external ? 'menu__item--external',
        item.is_expanded or item.in_active_trail ? 'menu__item--children',
        item.in_active_trail ? 'menu__item--active-trail',
        (auto_open and item.in_active_trail) ? 'menu__item--open',
      ]%}

      {% set explain_external_icon = null %}
      {% if item.is_external %}
        {% set explain_external_icon %}<span class="explain-external-icon"> ({{ 'Link leads to external service'|t({}, {'context': 'Explanation for screen-reader software that the icon visible next to this link means that the link leads to an external service.'}) }})</span>{% endset %}
      {% endif %}

      <li{{ item.attributes.addClass(item_classes) }}>
        <span class="menu__link-wrapper">
          {% if not item.is_nolink %}
            {% set item_title -%}

              {%- set icon_name = (item.url.getOption('attributes')).icon -%}

              {%- if icon_name -%}
                {%- include '@hdbt/misc/icon.twig' with {icon: icon_name, class:'menu__link__icon'} -%}
              {%- endif -%}<span class="menu__link__text">{{ item.title }}{{ explain_external_icon }}</span>
            {%- endset %}

            {% set link_attributes = {
              'class':
                [
                  'menu__link',
                  item.in_active_trail ? 'menu__link--active-trail',
                  item.is_external ? 'menu__link--external',
                ],
              'id': item_is_collabsible ? link_id,
              'aria-current': item.is_currentPage ? 'page',
            } %}

            {{ link(item_title, item.url, link_attributes) }}

          {% else %}
            <span{{ create_attribute({'class': item_classes}) }}><span class="menu__link__text" id="{{ item_is_collabsible ? link_id }}">{{ item.title }}{{ explain_external_icon }}</span></span>
          {% endif %}

          {% if item_is_collabsible %}
            <button
              type="button"
              aria-expanded="true"
              aria-controls="menu--level-{{ menu_level + 1 }}"
              aria-labelledby="{{ link_id }}"
              aria-haspopup="true"
              class="menu__toggle-button">
              {% include '@hdbt/misc/icon.twig' with {icon: 'angle-down', class: 'menu__toggle-button-icon'} %}
            </button>
          {% endif %}
        </span>
        {% if item.below %}
          {{ menus.menu_links(item.below, attributes|without('class'), menu_level + 1, allow_collabsible, auto_open) }}
        {% endif %}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
