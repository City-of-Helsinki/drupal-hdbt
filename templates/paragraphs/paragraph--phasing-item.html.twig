{%
  set classes = [
    'phasing__item',
    show_numbers ? 'phasing__item-with-numbers'
  ]
%}

{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    <{{ phasing_item_heading_level }} class="phasing__item-title">
      {{ content.field_title}}
    </{{ phasing_item_heading_level }}>
    <div class="phasing__item-description">
      {{ content.field_description}}
    </div>
  </div>
{% endblock paragraph %}

