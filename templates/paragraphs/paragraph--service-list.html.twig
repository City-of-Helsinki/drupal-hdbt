    {
      component_classes: [ 'component--service-list' ],
      component_title: content.field_service_list_title,
      component_description: content.field_service_list_description,
    }
  %}
    {% block component_content %}

      {{ drupal_view('service_list', 'block', services_list, search_parent_paragraph) }}

    {% endblock component_content %}
  {% endembed %}
{% endblock paragraph %}
