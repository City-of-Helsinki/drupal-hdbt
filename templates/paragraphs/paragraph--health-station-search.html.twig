{% block paragraph %}
  {% embed "@hdbt/misc/component.twig" with
    {
      component_classes: [
        'component--full-width',
        'component--react-search',
        'component--react-search--health-stations'
      ],
      component_title_level: 'h2',
      component_title: content.field_comp_search_title,
      component_description: content.field_comp_search_description,
      component_content_class: 'health-station-search',
    }
  %}
    {% block component_content %}
      {# Hook React app to this div #}
      <div id="helfi-health-station-search" data-paragraph-id="{{ paragraph.id() }}">
        {{ drupal_view('health_station_search', 'health_station_search') }}
      </div>
    {% endblock %}
  {% endembed %}
{% endblock %}
