{% block paragraph %}
  {% embed "@hdbt/misc/component.twig" with
    {
      component_classes: [ 'component--news-update' ],
      component_title: content.field_news_update_title,
      component_content_class: 'news-update',
      component_content_tag: 'div',
    }
  %}
    {% block component_tags %}
      <div class="component__date">
        {{ content.field_news_update_date }}
      </div>
    {% endblock component_tags %}

    {% block component_content %}
      {{ content.field_news_update }}

    {% endblock component_content %}
  {% endembed %}
{% endblock paragraph %}
