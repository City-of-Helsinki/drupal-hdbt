{#
/**
 * @file
 * The views infinite scroll pager template.
 */
#}

{% if items.next %}
  <ul{{ attributes.addClass('unit__services__pager') }}>
    <li class="pager__item unit__services__pager-button-wrapper">
      <a class="unit__services__pager-button button" href="{{ items.next.href }}" rel="next">
        {% include '@hdbt/button/button.html.twig' with {type: 'secondary', disabled: false, label: options.button_text } %}
      </a>
    </li>
  </ul>
{% endif %}
