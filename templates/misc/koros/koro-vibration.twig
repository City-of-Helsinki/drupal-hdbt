{% set korosId = 'koros' ~ random() %}
<svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" width="100%" height="85" fill="currentColor">
  <defs>
    <pattern id="{{ korosId }}" x="0" y="0" width="106" height="85" patternUnits="userSpaceOnUse">
      <polygon
          transform="scale(5.3)"
          points="0,800 20,800 20,0 10,10 0,0 "
      />
    </pattern>
  </defs>
  <rect fill="url(#{{ korosId }})" width="100%" height="85" />
</svg>
