<figure class="image {{figure_class}}">
  {{ image }}

  {% if image_caption %}
  {% set alternative_language = current_langcode not in primary_languages %}
  {% set figcaption_attributes = {
      'class': [
        'image__caption',
      ],
      'dir': alternative_language ? 'ltr',
      'lang': alternative_language ? 'en'
    }
  %}
    <figcaption {{ create_attribute(figcaption_attributes) }}>
      {{ image_caption }}
    </figcaption>
  {% endif %}
</figure>
