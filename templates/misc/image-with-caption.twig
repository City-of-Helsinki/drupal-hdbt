{% if aspect_ratio != null %}
  {# Handle aspect ratio alteration #}
  {% set media = image['#items'].entity %}
  {% set alt = image_caption is not empty ? image_caption : media.fields.field_media_image.alt %}
  {% set image = drupal_image(media.fields.field_media_image.entity.uri.value, aspect_ratio, {alt: alt}, responsive=true) %}
{% endif %}

{{ image }}

{% if image_caption %}
  {% spaceless %}
    <figcaption class="media--image__caption">
      {{ image_caption }}
    </figcaption>
  {% endspaceless %}
{% endif %}
