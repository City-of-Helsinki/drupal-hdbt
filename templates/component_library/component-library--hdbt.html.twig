      {% include '@hdbt/button/button.html.twig' with {type: 'supplementary', icon_first: true, icon_first_type: 'trash', disabled: false, label: 'Supplementary'|t } %}
      {% include '@hdbt/button/button.html.twig' with {type: 'supplementary', icon_first: true, icon_first_type: 'trash', disabled: true, label: 'Supplementary disabled'|t } %}
    </div>
    <div class="component-library__code">
      {{ "
      {% include '@hdbt/button/button.html.twig' with {type: 'supplementary', icon_first: true, icon_first_type: 'trash', disabled: false, label: 'Supplementary'|t } %}
      " }}
    </div>
  </div>

  <button class="component-library__accordion">Button - Icon buttons</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', icon_first: true, icon_first_type: 'trash', disabled: false, label: 'Button'|t } %}
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', icon_last: true, icon_last_type: 'trash', disabled: false, label: 'Button'|t } %}
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', icon_first: true, icon_first_type: 'trash', icon_last: true, icon_last_type: 'trash', disabled: false, label: 'Button'|t } %}
    </div>
    <div class="component-library__code">
      {{ "
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', icon_first: true, icon_first_type: 'trash', icon_last: true, icon_last_type: 'trash', disabled: false, label: 'Button'|t } %}
      " }}
    </div>
  </div>

  <button class="component-library__accordion">Button - Small buttons</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', size: 'small', disabled: false, label: 'Button'|t } %}
      {% include '@hdbt/button/button.html.twig' with {type: 'secondary', size: 'small', disabled: false, label: 'Button'|t } %}
      {% include '@hdbt/button/button.html.twig' with {type: 'supplementary', size: 'small', disabled: false, label: 'Button'|t } %}
    </div>
    <div class="component-library__code">
      {{ "
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', size: 'small', disabled: false, label: 'Button'|t } %}
