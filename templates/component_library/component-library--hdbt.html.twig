      {% include '@hdbt/button/button.html.twig' with {type: 'secondary', disabled: true, label: 'Secondary disabled'|t } %}
    </div>
    <div class="component-library__code">
      {{ "
      {% include '@hdbt/button/button.html.twig' with {type: 'secondary', disabled: false, label: 'Secondary'|t } %}
