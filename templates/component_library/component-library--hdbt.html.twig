  <button class="component-library__accordion">Button - Utility buttons</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% include '@hdbt/button/button.html.twig' with {type: 'success', disabled: false, label: 'Success'|t } %}
      {% include '@hdbt/button/button.html.twig' with {type: 'danger', disabled: false, label: 'Danger'|t } %}
    </div>
    <div class="component-library__code">
      {{ "
      {% include '@hdbt/button/button.html.twig' with {type: 'success', disabled: false, label: 'Success'|t } %}
      " }}
    </div>
  </div>

  <button class="component-library__accordion">Checkbox</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      <!-- Enabled -->
      <div class="hds-checkbox">
        <input type="checkbox" id="checkbox" class="hds-checkbox__input" />
        <label for="checkbox"  class="hds-checkbox__label">Label</label>
      </div>
      <!-- Enabled & selected -->
      <div class="hds-checkbox">
        <input type="checkbox" id="checkbox" class="hds-checkbox__input" checked />
        <label for="checkbox"  class="hds-checkbox__label">Label</label>
      </div>
      <!-- Disabled -->
      <div class="hds-checkbox">
        <input type="checkbox" id="checkbox" class="hds-checkbox__input" disabled />
        <label for="checkbox"  class="hds-checkbox__label">Label</label>
      </div>
      <!-- Disabled & selected -->
      <div class="hds-checkbox">
        <input type="checkbox" id="checkbox" class="hds-checkbox__input" checked disabled />
        <label for="checkbox"  class="hds-checkbox__label">Label</label>
      </div>
    </div>
    <div class="component-library__code">
      Use Drupal Form API Checkbox or this markup:<br /><br />
      {{ '<div class="hds-checkbox">'|e('html') }}<br />
      &nbsp;&nbsp;{{ '<input type="checkbox" id="checkbox1" class="hds-checkbox__input" value="foo" />'|e('html') }}<br />
      &nbsp;&nbsp;{{ '<label for="checkbox1" class="hds-checkbox__label">Option</label>\n'|e('html') }}<br />
      {{ '</div>'|e('html') }}
    </div>
  </div>

  <button class="component-library__accordion">Radio button</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      <!-- Enabled-->
      <div class="hds-radio-button">
        <input type="radio" id="radio1" class="hds-radio-button__input" name="example" value="foo" />
        <label for="radio1" class="hds-radio-button__label">Option</label>
      </div>
      <!-- Enabled & selected -->
      <div class="hds-radio-button">
        <input type="radio" id="radio2" class="hds-radio-button__input" name="example" value="bar" checked />
        <label for="radio2" class="hds-radio-button__label">Option</label>
      </div>
      <!-- Disabled -->
      <div class="hds-radio-button">
        <input type="radio" id="radio3" class="hds-radio-button__input" name="example" value="baz" disabled />
        <label for="radio3" class="hds-radio-button__label">Option</label>
      </div>
      <!-- Disabled & selected -->
      <div class="hds-radio-button">
        <input type="radio" id="radio4" class="hds-radio-button__input" checked disabled />
        <label for="radio4" class="hds-radio-button__label">Option</label>
      </div>
    </div>
    <div class="component-library__code">
      Use Drupal Form API Radio button or this markup:<br /><br />
      {{ '<div class="hds-radio-button">'|e('html') }}<br />
      &nbsp;&nbsp;{{ '<input type="radio" id="radio" class="hds-radio-button__input" />\n'|e('html') }}<br />
      &nbsp;&nbsp;{{ '<label for="radio" class="hds-radio-button__label">Label</label>\n'|e('html') }}<br />
      {{ '</div>'|e('html') }}
    </div>
  </div>

</div>
