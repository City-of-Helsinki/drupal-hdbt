{#
/**
 * @file
 * Consists a list of all components with a markup example and componnet.
#}
<div class="component-library-wrapper">
  <nav role="navigation" class="component-library__nav-wrapper">
    <input class="component-library__toggle" name="toggle" type="checkbox" />
    <label for="toggle">
      <div class="toggle--open">{% include "@hdbt/misc/icon.twig" with {icon: 'menu-hamburger', label: 'Open menu'|t } %}</div>
      <div class="toggle--close">{% include "@hdbt/misc/icon.twig" with {icon: 'cross', label: 'Close menu'|t } %}</div>
    </label>
    <ul class="component-library__nav" id="menu"></ul>
  </nav>

  <h2>Components</h2>

  {#
  Example.
  <button class="component-library__accordion">Icon</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% include '@hdbt/misc/icon.twig' with {icon: 'icon', label: 'Test label for the icon'|t } %}
    </div>
    <div class="component-library__code">
      {{ "
        {% include '@hdbt/misc/icon.twig' with {icon: 'icon', label: 'Test label for the icon'|t } %}
      " }}
    </div>
  </div>
  #}

  <button class="component-library__accordion">Status labels</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% set status_labels = {
        default: { label: 'Status label - Default' },
        info: { type: 'info', label: 'Status label - Info' },
        success: { type: 'success', label: 'Status label - Success' },
        alert: { type: 'alert', label: 'Status label - Alert' },
        error: { type: 'error', label: 'Status label - Error' },
      } %}
      {% for status in status_labels %}
        <div style="display:inline-block; margin-bottom: 1rem; margin-right: 1rem;">
          {% include '@hdbt/misc/status-label.html.twig' with { type: status.type, label: status.label } %}
        </div>
      {% endfor %}
    </div>
    <div class="component-library__code">
      {{ "
          {% include '@hdbt/misc/status-label.html.twig' with { type: 'error', label: 'Label which indicates error' } %}
      " }}
    </div>
  </div>

  <button class="component-library__accordion">Status messages</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% set message_list = {
        error: ['First error message'],
        warning: ['First warning message', 'Second warning message'],
        default: ['First normal message', 'Second normal message'],
        success: ['First success message', 'Second success message'],
      } %}
      {% set small_message_list = {
        error: ['First error message'],
        warning: ['First warning message'],
        default: ['First normal message'],
        success: ['First success message'],
      } %}
      {% set status_headings = {
        error: 'Error',
        warning: 'Warning',
        default: 'Info',
        success: 'Success'
      } %}
      <h4>Notification size: Default</h4>
      {% include '@hdbt/misc/status-messages.html.twig' with { status_headings: status_headings, message_list: message_list } %}
      <h4>Notification size: Small</h4>
      {% include '@hdbt/misc/status-messages.html.twig' with { status_headings: '', message_list: small_message_list, size: 'small' } %}
      <h4>Notification size: Large</h4>
      {% include '@hdbt/misc/status-messages.html.twig' with { status_headings: status_headings, message_list: message_list, size: 'large' } %}
    </div>
    <div class="component-library__code">
      {{ "
        {% include '@hdbt/misc/status-messages.html.twig' with { status_headings: status_headings, message_list: message_list, size: 'large' } %}
      " }}
    </div>
  </div>

  <button class="component-library__accordion">Tag</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% set tags = {
        default: { label: 'Tag - Default' },
        clickable: { label: 'Tag - Clickable', url: 'https://hds.hel.fi/components/tag#clickable-tags' },
        deletable: { label: 'Tag - Deletable', type: 'deletable' },
      } %}
      {% for tag in tags %}
        <div style="display:inline-block; margin-bottom: 1rem; margin-right: 1rem;">
          {% include '@hdbt/misc/tag.html.twig' with { type: tag.type, label: tag.label, url: tag.url } %}
        </div>
      {% endfor %}
    </div>
    <div class="component-library__code">
      {{ "
          {% include '@hdbt/misc/tag.html.twig' with { label: 'Label for the tag', url: 'https://hds.hel.fi/components/tag#clickable-tags' } %}
      " }}
    </div>
  </div>

