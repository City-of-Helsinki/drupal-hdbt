{#
/**
 * @file
 * Consists a list of all components with a markup example and componnet.
#}
<div class="component-library-wrapper">
  <div class="component-library__nav"></div>
  <h2>Components</h2>

  {#
  Example.
  <button class="component-library__accordion">Icon</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% include '@hdbt/misc/icon.twig' with {icon: 'icon', label: 'Test label for the icon'|t } %}
    </div>
    <div class="component-library__code">
      {{ "
        {% include '@hdbt/misc/icon.twig' with {icon: 'icon', label: 'Test label for the icon'|t } %}
      " }}
    </div>
  </div>
  #}

  <button class="component-library__accordion">Status messages</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% set message_list = {
        error: ['First error message'],
        warning: ['First warning message', 'Second warning message'],
        default: ['First normal message', 'Second normal message'],
        success: ['First success message', 'Second success message'],
      } %}
      {% set small_message_list = {
        error: ['First error message'],
        warning: ['First warning message'],
        default: ['First normal message'],
        success: ['First success message'],
      } %}
      {% set status_headings = {
        error: 'Error',
        warning: 'Warning',
        default: 'Info',
        success: 'Success'
      } %}
      <h4>Notification size: Default</h4>
      {% include '@hdbt/misc/status-messages.html.twig' with { status_headings: status_headings, message_list: message_list } %}
      <h4>Notification size: Small</h4>
      {% include '@hdbt/misc/status-messages.html.twig' with { status_headings: '', message_list: small_message_list, size: 'small' } %}
      <h4>Notification size: Large</h4>
      {% include '@hdbt/misc/status-messages.html.twig' with { status_headings: status_headings, message_list: message_list, size: 'large' } %}
    </div>
    <div class="component-library__code">
      {{ "
        {% include '@hdbt/misc/status-messages.html.twig' with { status_headings: status_headings, message_list: message_list, size: 'large' } %}
      " }}
    </div>
  </div>

  <h3>Form elements</h3>
  <button class="component-library__accordion">Button - Primary</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', disabled: false, label: 'Primary'|t } %}
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', disabled: true, label: 'Primary disabled'|t } %}
    </div>
    <div class="component-library__code">
      {{ "
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', disabled: false, label: 'Primary'|t } %}
      " }}
    </div>
  </div>

  <button class="component-library__accordion">Button - Secondary</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% include '@hdbt/button/button.html.twig' with {type: 'secondary', disabled: false, label: 'Secondary'|t } %}
      {% include '@hdbt/button/button.html.twig' with {type: 'secondary', disabled: true, label: 'Secondary disabled'|t } %}
    </div>
    <div class="component-library__code">
      {{ "
      {% include '@hdbt/button/button.html.twig' with {type: 'secondary', disabled: false, label: 'Secondary'|t } %}
      " }}
    </div>
  </div>

  <button class="component-library__accordion">Button - Supplementary</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% include '@hdbt/button/button.html.twig' with {type: 'supplementary', icon_first: true, icon_first_type: 'trash', disabled: false, label: 'Supplementary'|t } %}
      {% include '@hdbt/button/button.html.twig' with {type: 'supplementary', icon_first: true, icon_first_type: 'trash', disabled: true, label: 'Supplementary disabled'|t } %}
    </div>
    <div class="component-library__code">
      {{ "
      {% include '@hdbt/button/button.html.twig' with {type: 'supplementary', icon_first: true, icon_first_type: 'trash', disabled: false, label: 'Supplementary'|t } %}
      " }}
    </div>
  </div>

  <button class="component-library__accordion">Button - Icon buttons</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', icon_first: true, icon_first_type: 'trash', disabled: false, label: 'Button'|t } %}
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', icon_last: true, icon_last_type: 'trash', disabled: false, label: 'Button'|t } %}
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', icon_first: true, icon_first_type: 'trash', icon_last: true, icon_last_type: 'trash', disabled: false, label: 'Button'|t } %}
    </div>
    <div class="component-library__code">
      {{ "
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', icon_first: true, icon_first_type: 'trash', icon_last: true, icon_last_type: 'trash', disabled: false, label: 'Button'|t } %}
      " }}
    </div>
  </div>

  <button class="component-library__accordion">Button - Small buttons</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', size: 'small', disabled: false, label: 'Button'|t } %}
      {% include '@hdbt/button/button.html.twig' with {type: 'secondary', size: 'small', disabled: false, label: 'Button'|t } %}
      {% include '@hdbt/button/button.html.twig' with {type: 'supplementary', size: 'small', disabled: false, label: 'Button'|t } %}
    </div>
    <div class="component-library__code">
      {{ "
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', size: 'small', disabled: false, label: 'Button'|t } %}
      " }}
    </div>
  </div>

  <button class="component-library__accordion">Button - Utility buttons</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      {% include '@hdbt/button/button.html.twig' with {type: 'success', disabled: false, label: 'Success'|t } %}
      {% include '@hdbt/button/button.html.twig' with {type: 'danger', disabled: false, label: 'Danger'|t } %}
    </div>
    <div class="component-library__code">
      {{ "
      {% include '@hdbt/button/button.html.twig' with {type: 'success', disabled: false, label: 'Success'|t } %}
      " }}
    </div>
  </div>

  <button class="component-library__accordion">Checkbox</button>
  <div class="component-library__panel">
    <div class="component-library__example">
      <!-- Enabled -->
      <div class="hds-checkbox">
        <input type="checkbox" id="checkbox" class="hds-checkbox__input" />
        <label for="checkbox"  class="hds-checkbox__label">Label</label>
      </div>
      <!-- Enabled & selected -->
      <div class="hds-checkbox">
        <input type="checkbox" id="checkbox" class="hds-checkbox__input" checked />
        <label for="checkbox"  class="hds-checkbox__label">Label</label>
      </div>
      <!-- Disabled -->
      <div class="hds-checkbox">
        <input type="checkbox" id="checkbox" class="hds-checkbox__input" disabled />
        <label for="checkbox"  class="hds-checkbox__label">Label</label>
      </div>
      <!-- Disabled & selected -->
      <div class="hds-checkbox">
        <input type="checkbox" id="checkbox" class="hds-checkbox__input" checked disabled />
        <label for="checkbox"  class="hds-checkbox__label">Label</label>
      </div>
    </div>
    <div class="component-library__code">
      Use Drupal Form API Checkbox or this markup:<br /><br />
      {{ '<div class="hds-checkbox">'|e('html') }}<br />
      &nbsp;&nbsp;{{ '<input type="checkbox" id="checkbox1" class="hds-checkbox__input" value="foo" />'|e('html') }}<br />
      &nbsp;&nbsp;{{ '<label for="checkbox1" class="hds-checkbox__label">Option</label>\n'|e('html') }}<br />
      {{ '</div>'|e('html') }}
    </div>
  </div>

</div>
