      {% include '@hdbt/button/button.html.twig' with {type: 'primary', disabled: true, label: 'Primary disabled'|t } %}
    </div>
    <div class="component-library__code">
      {{ "
      {% include '@hdbt/button/button.html.twig' with {type: 'primary', disabled: false, label: 'Primary'|t } %}
