{% set card_external_class = card_url_external ? 'card--external' : '' %}

<div class="card {{ card_modifier_class }} {{ card_external_class }}">
  {% if card_image %}
    <div class="card__image">
      {{ card_image }}
    </div>
  {% endif %}

  <div class="card__text">
    <{{ card_title_level|default('h3') }} class="card__title">
      {{ link(card_title, card_url, { 'class':['card__link'],  'rel':'bookmark' }) }}
    </{{ card_title_level|default('h3') }}>

    {% if card_category_tag %}
      <div class="card__category">
        {% embed '@hdbt/misc/tag-list.twig'%}
          {% block content %}
            {% include '@hdbt/misc/tag.twig' with {
              tag: card_category_tag.tag,
              color: card_category_tag.color,
              addSpan: true,
            }%}
          {% endblock content %}
        {% endembed %}
      </div>
    {% endif %}

    {% if card_description %}
      <div class="card__description">
        {% if card_description_html %}
          {{ card_description }}
        {% else %}
          <p>{{ card_description }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if card_helptext %}
      <div class="card__helptext">
        {% if card_helptext_html %}
          {{ card_helptext }}
        {% else %}
          <p>{{ card_helptext }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if card_metas %}
      <div class="card__metas">
        {% for card_meta in card_metas %}
            <div class="card__meta"><span class="card__meta__icon">{% include '@hdbt/misc/icon.twig' ignore missing with {icon: card_meta.icon} %}</span><span class="card__meta__label">{{ card_meta.label }}: </span><span class="card__meta__content">{{ card_meta.content }}</span>
            </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if card_tags %}
      <div class="card__tags">
        {% embed '@hdbt/misc/tag-list.twig' with { tags: card_tags, addSpan: true } %}
        {% endembed %}
      </div>
    {% endif %}
  </div>
</div>
